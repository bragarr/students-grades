<%= form_with(model: student, html: {class: "row g-3 mx-3"}) do |form| %>
  <% if student.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
        <% student.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-md-6">
    <%= form.label :first_name, class:"form-label" %>
    <%= form.text_field :first_name, class:"form-control" %>
  </div>
  <div class="col-md-6">
    <%= form.label :last_name, class:"form-label" %>
    <%= form.text_field :last_name, class:"form-control" %>
  </div>
  <div class="col-12">
    <%= form.label :email, class:"form-label" %>
    <%= form.text_field :email, class:"form-control" %>
  </div>
  <div class="col-md-4">
    <%= form.label :phone, class:"form-label" %>
    <%= form.text_field :phone, class:"form-control" %>
  </div>
  <div class="col-md-6">
    <%= form.label :course, class:"form-label" %>
    <%= form.text_field :course, class:"form-control" %>
  </div>
  <div class="col-md-2">
    <%= form.label :grade, class:"form-label" %>
    <%= form.text_field :grade, class:"form-control" %>
  </div>
  <div class="col-md-2 d-none">
    <%= form.label :user_id, class:"form-label" %>
    <%= form.number_field :user_id, id: :student_user_id, class:"form-control", value: current_user.id, type: :hidden %>
  </div>
  <div>
    <%= form.submit class:"btn btn-outline-success" %>
  </div>
<% end %>
