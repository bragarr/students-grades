<section>
  <span style="color: green"><%= notice %></span>
  <h1 class="m-4">My Students</h1>
  <article class="table-responsive mx-4 w-50">
    <table class="table">
      <thead class="table-dark">
        <tr>
          <th>First name</th>
          <th>Last name</th>
          <th>Course</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @students.each do |student| %>
          <tr id="students">
            <td><%= student.first_name %></td>
            <td><%= student.last_name %></td>
            <td><%= student.course %></td>
            <td><%= link_to "Show this student", student %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </article>
  <%= link_to "New student", new_student_path, class:"btn btn-primary mx-4" %>
</section>
